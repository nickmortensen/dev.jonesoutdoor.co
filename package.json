{
 "name": "wprig",
 "version": "2.0.1",
 "description": "A progressive theme development rig for WordPress.",
 "author": "The WP Rig Contributors",
 "license": "GPL-3.0-or-later",
 "main": "index.php",
 "homepage": "https://github.com/wprig/wprig#readme",
 "repository": {
  "type": "git",
  "url": "git+https://github.com/wprig/wprig.git"
 },
 "bugs": {
  "url": "https://github.com/wprig/wprig/issues"
 },
 "devDependencies": {
  "@babel/core": "^7.7.7",
  "@babel/preset-env": "^7.7.7",
  "@babel/register": "^7.7.7",
  "@tailwindcss/custom-forms": "^0.2.1",
  "@wordpress/eslint-plugin": "^2.4.0",
  "ajv": "^6.10.1",
  "ansi-colors": "^4.1.1",
  "autoprefixer": "^9.7.3",
  "babel-jest": "^24.9.0",
  "browser-sync": "^2.26.7",
  "create-cert": "^1.0.6",
  "cross-env": "^5.2.1",
  "cssnano": "^4.1.10",
  "deepmerge": "^4.2.2",
  "del": "^5.1.0",
  "eslint": "^6.8.0",
  "eslint-config-gulp": "^3.0.1",
  "eslint-config-standard": "^14.0.1",
  "eslint-plugin-import": "^2.19.1",
  "eslint-plugin-node": "^10.0.0",
  "eslint-plugin-promise": "^4.2.1",
  "eslint-plugin-standard": "^4.0.1",
  "esm": "^3.2.25",
  "esvalidate": "^0.1.3",
  "fancy-log": "^1.3.3",
  "glob": "^7.1.6",
  "gulp": "^4.0.2",
  "gulp-babel": "^8.0.0",
  "gulp-eslint": "^6.0.0",
  "gulp-if": "^2.0.2",
  "gulp-imagemin": "^6.2.0",
  "gulp-load-plugins": "^2.0.2",
  "gulp-newer": "^1.4.0",
  "gulp-notify": "^3.2.0",
  "gulp-phpcs": "^3.1.0",
  "gulp-plumber": "^1.2.1",
  "gulp-postcss": "^8.0.0",
  "gulp-potomo": "^1.1.0",
  "gulp-print": "^5.0.2",
  "gulp-rename": "^1.4.0",
  "gulp-sort": "^2.0.0",
  "gulp-string-replace": "^1.1.2",
  "gulp-tabify": "0.0.2",
  "gulp-uglify": "^3.0.2",
  "gulp-wp-pot": "^2.3.6",
  "gulp-zip": "^5.0.1",
  "import-fresh": "^3.2.1",
  "jest": "^24.9.0",
  "jest-expect-message": "^1.0.2",
  "map-stream": "0.0.7",
  "mississippi": "^4.0.0",
  "mkdirp": "^0.5.1",
  "npm-run-all": "^4.1.5",
  "postcss-calc": "^7.0.1",
  "postcss-cli": "^6.1.3",
  "postcss-color-mod-function": "^3.0.3",
  "postcss-extend-rule": "^3.0.0",
  "postcss-import": "^12.0.1",
  "postcss-partial-import": "^4.1.0",
  "postcss-preset-env": "^6.7.0",
  "postcss-reporter": "^6.0.1",
  "pump": "^3.0.0",
  "rimraf": "^2.7.1",
  "stylelint": "^10.0.1",
  "stylelint-config-prettier": "^5.3.0",
  "stylelint-config-wordpress": "^14.0.0",
  "tailwindcss": "^1.1.4",
  "vinyl": "^2.2.0"
 },
 "babel": {
  "presets": [
   "@babel/env"
  ]
 },
 "eslintConfig": {
  "extends": "plugin:@wordpress/eslint-plugin/recommended",
  "root": true,
  "env": {
   "browser": true,
   "node": true,
   "es6": true
  },
  "rules": {
   "arrow-parens": [
    "error",
    "as-needed"
   ],
   "comma-dangle": [
    "error",
    {
     "arrays": "always-multiline",
     "objects": "always-multiline"
    }
   ],
   "indent": [
    "error",
    "tab"
   ],
   "no-console": 0,
   "no-multi-spaces": "off",
   "no-unused-vars": 1,
   "semi": 2,
   "space-in-parens": [
    "error",
    "always",
    {
     "exceptions": [
      "{}",
      "[]"
     ]
    }
   ],
   "template-curly-spacing": [
    "error",
    "never"
   ],
   "yoda": [
    "error",
    "always"
   ]
  },
  "globals": {
   "jQuery": "readonly",
   "wp": "readonly"
  }
 },
 "jest": {
  "setupFilesAfterEnv": [
   "jest-expect-message"
  ]
 },
 "stylelint": {
  "extends": "/usr/local/lib/node_modules/stylelint-config-wordpress",
  "rules": {
   "at-rule-no-unknown": [
    true,
    {
     "ignoreAtRules": [
      "custom-media",
      "/^custom/"
     ]
    }
   ],
   "no-descending-specificity": null,
   "no-duplicate-selectors": null,
   "comment-empty-line-before": [
    "always",
    {
     "ignore": [
      "after-comment",
      "stylelint-commands"
     ]
    }
   ],
   "at-rule-empty-line-before": [
    "always"
   ],
   "rule-empty-line-before": [
    "always",
    {
     "ignore": [
      "after-comment",
      "first-nested",
      "inside-block"
     ]
    }
   ],
   "value-list-comma-newline-after": "always-multi-line",
   "block-opening-brace-newline-after": [
    "always"
   ],
   "block-closing-brace-newline-before": [
    "always"
   ]
  }
 },
 "scripts": {
  "tailwind": "postcss assets/css/src/tailwind/source/_tailwind.css -o assets/css/src/tailwind/tailwind.css",
  "watch-tailwind": "postcss assets/css/src/tailwind/source/_tailwind.css -o assets/css/src/tailwind/tailwind.css --watch",
  "build": "gulp buildDev",
  "bundle": "cross-env NODE_ENV=production gulp bundleTheme",
  "dev": "gulp",
  "gulp": "gulp",
  "generateCert": "gulp generateCert",
  "rig-init": "npm install && composer install",
  "translate": "gulp translate",
  "test:gulp:dev": "jest gulp/tests --testPathIgnorePatterns gulp/tests/prod-build",
  "test:gulp:prod:setup": "NODE_ENV=production node -r esm gulp/tests/prod-build/prod-build.setup.js",
  "test:gulp:prod:teardown": "NODE_ENV=production node -r esm gulp/tests/prod-build/prod-build.teardown.js",
  "test:gulp:prod:run": "cross-env NODE_ENV=production jest gulp/tests/prod-build",
  "test:gulp:prod": "run-s test:gulp:prod:setup bundle test:gulp:prod:run test:gulp:prod:teardown",
  "test:gulp": "run-s test:gulp:dev test:gulp:prod",
  "lint": "eslint assets/js/src/",
  "lint:gulp": "eslint gulp/",
  "lint:gulp:fix": "eslint --fix gulp/"
 }
}
